<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-2 col-sm-8">
      <div class="card login-card" style="align-self: center;">
        <h2>Log in</h2>
        <%= render 'devise/shared/social_links' %>
        <h4 class="text-center" style="margin: 20px; margin-bottom: 10px;">OR</h4>
        <% if alert %>
          <div class="alert alert-danger"><%= alert %></div>
        <% end -%>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn btn-danger btn-bold btn-mg-btm" %>
          </div>
        <% end %>
        <div id="login-link">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
